#!/bin/sh -e

action="$1"
oldversion="$2"

if [ "$action" != configure ]
then
      exit 0
fi

set +x

mkdir -p /var/log/palette
mkdir -p /opt/palette/plugins

cd /opt/palette/plugins
for x in `ls -d /usr/share/pyshared/palette*`; do
    ln -s $x
done

chown -R www-data:adm /var/log/palette
chown -R www-data:adm /opt/palette

exit 0
